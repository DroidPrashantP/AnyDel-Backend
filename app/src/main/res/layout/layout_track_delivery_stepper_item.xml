<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_trackPackageDetailScreen_statusIndicator"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:background="@drawable/ic_radion_btn_selected"
        android:gravity="center"
        android:textColor="@color/text_primary_color"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_trackPackageDetailScreen"
        style="@style/ConstraintWrapStyle"
        android:layout_width="@dimen/dimen_2dp"
        android:layout_height="@dimen/dimen_30dp"
        android:background="@color/text_primary_color"
        android:layout_marginStart="@dimen/dimen_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_statusLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_trackPackageDetailScreen_dashView"
        style="@style/ConstraintWrapStyle"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text=" -- "
        android:textAllCaps="true"
        android:textColor="@color/text_primary_color"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_trackPackageDetailScreen_statusIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_trackPackageDetailScreen_statusLabel"
        style="@style/ConstraintWrapStyle"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:text="@string/pick_up_address"
        android:textAllCaps="true"
        android:textColor="@color/text_primary_color"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_trackPackageDetailScreen_dashView"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
