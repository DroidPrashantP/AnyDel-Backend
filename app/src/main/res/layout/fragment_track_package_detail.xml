<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParentWrapContent">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/dimen_8dp"
        android:paddingEnd="@dimen/dimen_8dp"
        tools:context=".ui.delivery.AddressPickerFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_trackPackageDetailScreen_appLogo"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_app_anydel_backend_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trackPackageDetailScreen_headerLabel"
            style="@style/ConstraintWrapStyle"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:shadowColor="@color/secondary_color"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:text="@string/track_your_package"
            android:textAllCaps="true"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_appLogo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trackPackageDetailScreen_headerDesc"
            style="@style/ConstraintWrapStyle"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_headerLabel" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trackPackageDetailScreen_packageId"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/package_id"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_headerDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trackPackageDetailScreen_packageIdValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_headerDesc" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trackPackageDetail"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_trackPackageDetailScreen_packageIdValue" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="rv_trackPackageDetail"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_trackPackageDetailScreen_deliveryDetailBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_margin="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_16sp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/delivery_details_label"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_trackPackageDetailScreen_cancelDeliveryBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_barrier" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_trackPackageDetailScreen_cancelDeliveryBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/cancel_delivery"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_trackPackageDetailScreen_deliveryDetailBtn"
            app:layout_constraintTop_toBottomOf="@+id/bottom_barrier" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_trackPackageDetailScreen_homeBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_margin="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_16sp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/home_label"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_trackPackageDetailScreen_deliveryDetailBtn" />

        <include
            layout="@layout/progress_bar_layout"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>