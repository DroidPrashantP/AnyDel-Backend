<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParentWrapContent">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParent"
        android:paddingStart="@dimen/dimen_8dp"
        android:paddingEnd="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.delivery.AddressPickerFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_packageDetailScreen_appLogo"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_app_anydel_backend_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_headerLabel"
            style="@style/ConstraintWrapStyle"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:shadowColor="@color/secondary_color"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:text="@string/package_delivery_details"
            android:textAllCaps="true"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_appLogo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_headerDesc"
            style="@style/ConstraintWrapStyle"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="@string/please_find_the_below_details_about_your_package"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_headerLabel" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_packageId"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/package_id"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_headerDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_packageIdValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_headerDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_deliveryDateLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/delivery_date_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_packageId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_deliveryDateValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_packageId" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_deliveryTimeLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/delivery_time_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_deliveryDateLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_deliveryTimeValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_deliveryDateLabel" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_pickUpAddressLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/pick_up_address"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_deliveryTimeLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_pickUpAddressValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_deliveryTimeLabel" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_dropOffAddressLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/drop_off_Address"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_pickUpAddressValue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_dropOffAddressValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_pickUpAddressValue" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_bookingDateLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/booking_date_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_dropOffAddressValue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_bookingDateValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_dropOffAddressValue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_bookingTimeLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/booking_time_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_bookingDateLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_bookingTimeValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_bookingDateLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_amountLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/amount_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_bookingTimeLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_amountValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_bookingTimeLabel" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_statusLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/status_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_amountLabel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_statusValue"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_amountLabel" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_packageDetailScreen_packagePhotoLabel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="@string/package_photo_label"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_statusLabel" />

        <HorizontalScrollView
            android:id="@+id/ll_packageDetailScreen_HorizontalContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_110dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_packageDetailScreen_packagePhotoLabel">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_packageDetailScreen_imagesContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_110dp" />

        </HorizontalScrollView>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv_packageDetailScreen_packagePhotoLabel, ll_packageDetailScreen_HorizontalContainer" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_packageDetailScreen_ratingBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/submit_rating"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/btn_packageDetailScreen_trackDeliveryBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_barrier" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_packageDetailScreen_trackDeliveryBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_margin="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_16sp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/track_delivery"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_packageDetailScreen_ratingBtn"
            app:layout_constraintTop_toBottomOf="@+id/bottom_barrier" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_packageDetailScreen_homeBtn"
            style="@style/ConstraintWrapStyle"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_16sp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/home_label"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_packageDetailScreen_trackDeliveryBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>