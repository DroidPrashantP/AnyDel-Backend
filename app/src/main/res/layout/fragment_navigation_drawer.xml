<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:clickable="true"
    android:filterTouchesWhenObscured="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_navigationDrawer_headerInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:background="@drawable/actionbar_background_drawable"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_navigationDrawer_userImageBg"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@drawable/user_picture_circular_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_navigationDrawer_userImage"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:src="@drawable/ic_default_user"
            app:layout_constraintBottom_toBottomOf="@+id/view_navigationDrawer_userImageBg"
            app:layout_constraintEnd_toEndOf="@+id/view_navigationDrawer_userImageBg"
            app:layout_constraintStart_toStartOf="@+id/view_navigationDrawer_userImageBg"
            app:layout_constraintTop_toTopOf="@+id/view_navigationDrawer_userImageBg" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_navigationDrawer_username"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dimen_8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_navigationDrawer_userImageBg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_navigationDrawer_mobile"
            style="@style/ConstraintWrapStyle"
            android:layout_marginStart="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_navigationDrawer_userImageBg"
            app:layout_constraintTop_toBottomOf="@+id/tv_navigationDrawer_username" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_navigationDrawer_headerInfo" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_navigationDrawer"
        style="@style/ConstraintMatchStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            style="@style/MatchParentWrapContent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_navigationDrawer_notification"
                style="@style/MatchParentWrapContent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/notification"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_navigationDrawer_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:background="@color/border_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_navigationDrawer_headerInfo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_navigationDrawer_aboutUs"
                style="@style/MatchParentWrapContent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/about_us"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_navigationDrawer_aboutUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:background="@color/border_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_navigationDrawer_headerInfo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_navigationDrawer_logout"
                style="@style/MatchParentWrapContent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/logout_label"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>