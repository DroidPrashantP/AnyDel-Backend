<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout_deliveriesToComplete"
    style="@style/MatchParent">

    <androidx.core.widget.NestedScrollView style="@style/MatchParent">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/MatchParent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_homeScreen_appLogo"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_app_anydel_backend_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_homeScreen_activityItemContainer"
                style="@style/ConstraintWrapStyle"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@color/secondary_color_light"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_appLogo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_homeScreen_deliveryCompletedContainer"
                    style="@style/ConstraintWrapStyle"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toStartOf="@+id/cl_homeScreen_cancelDeliveryContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_homeScreen_deliveryServiceIcon"
                        style="@style/HomeIconStyle"
                        android:padding="@dimen/dimen_8dp"
                        android:src="@drawable/ic_delivery_completed"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_homeScreen_deliveryServiceLabel"
                        style="@style/ConstraintWrapStyle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="@string/completed_delivery"
                        android:textColor="@color/text_primary_color"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_homeScreen_deliveryServiceIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_homeScreen_cancelDeliveryContainer"
                    style="@style/ConstraintWrapStyle"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toStartOf="@+id/cl_homeScreen_myAddressContainer"
                    app:layout_constraintStart_toEndOf="@+id/cl_homeScreen_deliveryCompletedContainer"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_homeScreen_serviceHistoryIcon"
                        style="@style/HomeIconStyle"
                        android:background="@drawable/image_background_drawable"
                        android:padding="@dimen/dimen_8dp"
                        android:src="@drawable/ic_delivery_canceled"
                        android:tint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_homeScreen_serviceHistoryLabel"
                        style="@style/ConstraintWrapStyle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="@string/cancel_delivery"
                        android:textColor="@color/text_primary_color"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_homeScreen_serviceHistoryIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_homeScreen_myAddressContainer"
                    style="@style/ConstraintWrapStyle"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/cl_homeScreen_myProfileContainer"
                    app:layout_constraintStart_toEndOf="@+id/cl_homeScreen_cancelDeliveryContainer"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_homeScreen_myAddressIcon"
                        style="@style/HomeIconStyle"
                        android:background="@drawable/image_background_drawable"
                        android:padding="@dimen/dimen_8dp"
                        android:src="@drawable/ic_wallet"
                        android:tint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_homeScreen_myAddressLabel"
                        style="@style/ConstraintWrapStyle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="@string/my_balance"
                        android:textColor="@color/text_primary_color"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_homeScreen_myAddressIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_homeScreen_myProfileContainer"
                    style="@style/ConstraintWrapStyle"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toStartOf="@+id/cl_homeScreen_settingContainer"
                    app:layout_constraintStart_toEndOf="@+id/cl_homeScreen_myAddressContainer"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_homeScreen_myProfileIcon"
                        style="@style/HomeIconStyle"
                        android:background="@drawable/image_background_drawable"
                        android:padding="@dimen/dimen_8dp"
                        android:src="@drawable/ic_profile"
                        android:textSize="@dimen/dimen_12sp"
                        android:tint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_homeScreen_myProfileLabel"
                        style="@style/ConstraintWrapStyle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="@string/my_profile"
                        android:textColor="@color/text_primary_color"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_homeScreen_myProfileIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_homeScreen_settingContainer"
                    style="@style/ConstraintWrapStyle"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cl_homeScreen_myProfileContainer"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_homeScreen_settingIcon"
                        style="@style/HomeIconStyle"
                        android:background="@drawable/image_background_drawable"
                        android:padding="@dimen/dimen_8dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/primary_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/iv_homeScreen_settingLabel"
                        style="@style/ConstraintWrapStyle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_4dp"
                        android:text="@string/settings"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_homeScreen_settingIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_homeScreen_welcomeMsg"
                style="@style/ConstraintWrapStyle"
                android:lineSpacingExtra="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_16dp"
                android:text="@string/welcome_msg"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_activityItemContainer" />

            <View
                android:id="@+id/view_homeScreen_userInfoDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:background="@color/secondary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_welcomeMsg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_homeScreen_deliveriesToCompleteMsg"
                style="@style/ConstraintWrapStyle"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/deliveries_to_complete"
                android:textAllCaps="true"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_homeScreen_userInfoDivider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_homeScreen_deliveriesToComplete"
                style="@style/ConstraintWrapStyle"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_deliveriesToCompleteMsg"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_homeScreen_deliveriesToComplete" />

            <include
                style="@style/ConstraintMatchStyle"
                layout="@layout/layout_empty_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_deliveriesToCompleteMsg" />

            <include
                layout="@layout/progress_bar_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_homeScreen_deliveriesToCompleteMsg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>