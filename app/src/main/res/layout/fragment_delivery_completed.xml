<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent"
    android:padding="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_deliveryCompletedScreen_appLogo"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_app_anydel_backend_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_deliveryCompletedScreen_Label"
        style="@style/ConstraintWrapStyle"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:shadowColor="@color/secondary_color"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:text="@string/delivery_completed"
        android:textAllCaps="true"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/dimen_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_deliveryCompletedScreen_appLogo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_deliveryCompletedScreen"
        style="@style/ConstraintMatchStyle"
        app:layout_constraintBottom_toTopOf="@+id/cl_deliveryCompletedScreen_btnContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_deliveryCompletedScreen_Label" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_deliveryCompletedScreen_btnContainer"
        style="@style/ConstraintWrapStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_deliveryCompletedScreen_home"
            style="@style/ConstraintWrapStyle"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/home_label"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        style="@style/ConstraintMatchStyle"
        layout="@layout/layout_empty_view"
        app:layout_constraintBottom_toTopOf="@+id/cl_deliveryCompletedScreen_btnContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_deliveryCompletedScreen_Label" />

    <include
        layout="@layout/progress_bar_layout"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
