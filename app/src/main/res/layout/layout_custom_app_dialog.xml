<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParentWrapContent"
        android:padding="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_dialog_image"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_round_correct" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_dialog_title"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/text_primary_color"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_dialog_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_dialog_message"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_cancel"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/card_selected_bg"
            android:text="@string/cancel_label"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_dialog_okay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_message" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_okay"
            style="@style/ConstraintWrapStyle"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/btn_background_drawable"
            android:text="@string/okay"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_dialog_cancel"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



